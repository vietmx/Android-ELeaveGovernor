<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sachdeva.eleavegovernor.AdminHomeActivity">

    <TextView
        android:id="@+id/textView21"
        android:background="@color/black"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:text="  Admin"
        android:textStyle="italic"
        android:textColor="@color/colorWhite"
        android:textSize="28sp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/registerUser"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="151dp"
        android:background="@drawable/register_new_user"
        android:onClick="registerHere"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21"
        app:srcCompat="@drawable/register_new_user" />

    <ImageButton
        android:id="@+id/addTimeTable"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="151dp"
        android:background="@drawable/update_time_table"
        android:onClick="addTimeTable"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21"
        app:srcCompat="@drawable/update_time_table" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register New User"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginLeft="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/registerUser" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Time Table"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginRight="52dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/addTimeTable" />

</android.support.constraint.ConstraintLayout>
