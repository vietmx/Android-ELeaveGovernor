<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sachdeva.eleavegovernor.HomeActivity"
    tools:showIn="@layout/app_bar_home">

    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <ImageButton
        android:id="@+id/getCL"
        style="@style/Widget.AppCompat.ActionMode"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="107dp"
        android:background="@drawable/cl"
        android:onClick="OnCasualLeaveClick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cl" />

    <ImageButton
        android:id="@+id/getEL"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="107dp"
        android:background="@drawable/el"
        android:onClick="OnEarnedLeaveClick"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/el" />

    <ImageButton
        android:id="@+id/getML"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/ml"
        android:onClick="OnMedicalLeaveClick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/getCL"
        app:srcCompat="@drawable/ml" />

    <ImageButton
        android:id="@+id/getDL"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="76dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/dl"
        android:onClick="OnDutyLeaveClick"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/getEL"
        app:srcCompat="@drawable/dl" />

    <ImageButton
        android:id="@+id/getAL"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="107dp"
        android:background="@drawable/al"
        android:onClick="OnAcademicLeaveClick"
        app:layout_constraintLeft_toLeftOf="@+id/getCL"
        app:layout_constraintRight_toRightOf="@+id/getEL"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/al" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Casual Leave"
        android:textColor="@color/black"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/getCL"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Academic Leave"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="0.333"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/getAL"
        app:layout_constraintLeft_toRightOf="@+id/textView14"
        android:layout_marginLeft="20dp"
        app:layout_constraintRight_toLeftOf="@+id/textView16"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Earned Leave"
        android:textColor="@color/black"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/getEL"
        android:layout_marginRight="26dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="0dp"
        android:text="Medical Leave"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getML" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp"
        android:layout_marginTop="0dp"
        android:text="Duty Leave"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getDL" />

</android.support.constraint.ConstraintLayout>
