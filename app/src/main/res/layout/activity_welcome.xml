<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundwallpaper"
    tools:context="com.example.sachdeva.eleavegovernor.WelcomeActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="250dp"
        android:layout_height="68dp"
        android:text="Welcome"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="109dp" />

    <Button
        android:id="@+id/userLogin"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:onClick="regularUserLogin"
        android:text="Login"
        android:textAlignment="center"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/admin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.973"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/admin"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginBottom="141dp"
        android:background="@drawable/button"
        android:onClick="adminLogin"
        android:text="Admin"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
