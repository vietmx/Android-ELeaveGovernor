<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sachdeva.eleavegovernor.AdjustmentNotification">

    <TextView
        android:id="@+id/adjustmentNotificationView"
        android:layout_width="383dp"
        android:layout_height="65dp"
        android:background="#000000"
        android:textSize="28dp"
        android:textStyle="italic"
        android:gravity="center_vertical"
        android:text="  Leave Notification"
        android:textColor="@color/colorWhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />
    <ListView
        android:id="@+id/adjustmentNotificationListview"
        android:layout_width="0dp"
        android:layout_height="490dp"
        app:layout_constraintTop_toBottomOf="@+id/adjustmentNotificationView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginBottom="5dp"
        app:layout_constraintVertical_bias="0.312" />

</android.support.constraint.ConstraintLayout>
